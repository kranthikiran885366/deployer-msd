# Frontend Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=https://your-backend-app.onrender.com/api
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app
NEXT_PUBLIC_ENVIRONMENT=production

# Socket Configuration
NEXT_PUBLIC_SOCKET_SERVER_URL=https://your-backend-app.onrender.com
NEXT_PUBLIC_WEBSOCKET_URL=wss://your-backend-app.onrender.com

# Authentication
NEXTAUTH_URL=https://your-app.vercel.app
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXT_PUBLIC_AUTH_PROVIDER=credentials

# Analytics & Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Feature Flags
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# UI Configuration
NEXT_PUBLIC_APP_NAME=Deployer Glow Studio
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_DEFAULT_THEME=light

# Deployment Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_SUPPORTED_FRAMEWORKS=next,react,vue,angular,svelte
NEXT_PUBLIC_DEFAULT_REGION=us-east-1

# Logging
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_ENABLE_DEBUG=false