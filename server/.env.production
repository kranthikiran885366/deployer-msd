# Production Environment Variables for Render
NODE_ENV=production
PORT=10000

# Database
MONGODB_URI=your-mongodb-connection-string

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-here

# URLs
API_URL=https://your-backend-app.onrender.com
CLIENT_URL=https://your-app.vercel.app

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Provider Integrations
VERCEL_TOKEN=your-vercel-token
VERCEL_TEAM_ID=your-vercel-team-id
NETLIFY_TOKEN=your-netlify-token
NETLIFY_WEBHOOK_SECRET=your-netlify-webhook-secret
RENDER_API_KEY=your-render-api-key
RENDER_WEBHOOK_SECRET=your-render-webhook-secret

# Webhook Secrets
VERCEL_WEBHOOK_SECRET=your-vercel-webhook-secret

# Metrics Authentication
METRICS_USERNAME=admin
METRICS_PASSWORD=your-metrics-password