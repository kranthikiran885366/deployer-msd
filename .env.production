# Production Environment Variables for Render
NODE_ENV=production

# API Configuration
NEXT_PUBLIC_API_URL=https://deployer-msd-1.onrender.com/api
NEXT_PUBLIC_APP_URL=https://deployer-msd-2.onrender.com
NEXT_PUBLIC_ENVIRONMENT=production

# Socket Configuration
NEXT_PUBLIC_SOCKET_SERVER_URL=https://deployer-msd-1.onrender.com
NEXT_PUBLIC_WEBSOCKET_URL=wss://deployer-msd-1.onrender.com

# Authentication (Set these in Render dashboard)
NEXTAUTH_URL=https://deployer-msd-2.onrender.com
NEXTAUTH_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Feature Flags
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# UI Configuration
NEXT_PUBLIC_APP_NAME=Deployer Glow Studio
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_DEFAULT_THEME=light

# Deployment Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_SUPPORTED_FRAMEWORKS=next,react,vue,angular,svelte
NEXT_PUBLIC_DEFAULT_REGION=us-east-1

# Logging
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_ENABLE_DEBUG=false